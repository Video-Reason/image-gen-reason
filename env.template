# VMEvalKit Environment Variables Template
# Copy this file to .env and fill in your API keys

# ========================================
# Runway ML API 
# ========================================
# Get your API key from: https://app.runwayml.com/
# Supports Gen-3A Turbo, Gen-4 Turbo, and Gen-4 Aleph I2V models
RUNWAYML_API_SECRET=your-runwayml-api-secret-here

# ========================================
# Luma Dream Machine API
# ========================================
# Get your API key from: https://lumalabs.ai/dream-machine/api
LUMA_API_KEY=your-luma-api-key-here

# ========================================
# Pika Labs API
# ========================================
# Get your API key from: https://pika.art/
PIKA_API_KEY=your-pika-api-key-here

# ========================================
# Genmo Mochi API
# ========================================
# Get your API key from: https://www.genmo.ai/
GENMO_API_KEY=your-genmo-api-key-here

# ========================================
# Google Cloud (for Imagen Video / Veo)
# ========================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_API_KEY=your-google-api-key-here
GCP_PROJECT_ID=your-gcp-project-id-here

# ========================================
# Stability AI
# ========================================
# Get your API key from: https://platform.stability.ai/
STABILITY_API_KEY=your-stability-api-key-here

# ========================================
# Optional: Haiper AI
# ========================================
# Get your API key from: https://haiper.ai/
HAIPER_API_KEY=your-haiper-api-key-here

# ========================================
# Optional: Kling (Kuaishou)
# ========================================
# Get your API key from: https://kling.kuaishou.com/
KLING_API_KEY=your-kling-api-key-here

# ========================================
# Optional: Leonardo.ai
# ========================================
# Get your API key from: https://leonardo.ai/
LEONARDO_API_KEY=your-leonardo-api-key-here

# ========================================
# WaveSpeed AI (WAN 2.1 & 2.2 I2V Models)
# ========================================
# Get your API key from: https://wavespeed.ai/
# Supports all 18 WAN 2.x image-to-video generation models
WAVESPEED_API_KEY=your-wavespeed-api-key-here

# ========================================
# Configuration Settings
# ========================================
# Output directory for generated videos
OUTPUT_DIR=./outputs

# Maximum wait time for video generation (in seconds)
MAX_WAIT_TIME=600

# Enable debug logging
DEBUG=false

# Rate limiting (requests per minute)
RATE_LIMIT=60

# ========================================
# AWS / S3 Settings (for data syncing)
# ========================================
# IAM user or role credentials. If running on EC2/ECS with roles, you can leave
# these blank and the SDK will pick up instance profile credentials.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_REGION=us-east-1

# Default bucket for versioned data uploads
S3_BUCKET=vmevalkit
